<%= form_for @song  do |f| %>
  <% if @song.author.nil? %>
   <%= f.select :author_id, options_from_collection_for_select(Author.all, :id, :name) %><br>
   <% end %>
  <%= f.hidden_field :artist_id %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.submit %>
<% end %>
